.air-index-info{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 250px;
    color: #fff;
    position: absolute;
    top:70px;
    left:50%;
    transform: translateX(-50%);
}
.air-index-info__bd{
    background-image: url("https://6d79-mywxapp-q4z0b-1301425530.tcb.qcloud.la/bg-weather/timg.gif?sign=d9d7fa4eb86dc949076ef7ad8a59590e&t=1585743652");
    background-size: cover;
    padding-bottom: 50px;
    padding-top: 5px;
    padding-left: 5px;
    padding-right: 5px;
}
.air-icon{
    margin-left: 215px;
    color: #fff;
}
.air-index-info__bd-content{
    text-align: center;
}
.air-title{
    margin-top: 40px;
}
.air-number{
    margin: 10px;
    font-size: 42px;
}
.air-level{
    display: inline-block;
}
.air-index-info__ft{
    text-align: left;
    padding: 10px;
    background-color: #fff;
    color: black;
}