.week-air{
    background-color: #fff;
    margin: 5px 0 
}
.week-air-item{
 width: 100%;
padding: 5px 10px;
display: flex;
flex-direction: row;
align-items: center;
box-sizing: border-box;

}
.week-air-item__left{
    flex: 0.45;
}
.week-air-item__middle{
    flex:0.3;
    margin: auto;
}
.week-air-item__icon{
    width: 22px;
    height: 22px;
}
.week-air-item__right{
    flex:0.15;
    display: flex;
    margin: auto;
}
.week-air-item__right-left{
    flex:1;
}
.week-air-item__right-right{
    flex:1;
}